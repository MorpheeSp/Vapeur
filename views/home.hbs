<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Vapeur - Accueil</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        .game {
            background: #f0f0f0;
            padding: 15px;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <h1>Jeux</h1>
    
    <p><a href="/games/new">Ajouter un jeu</a></p>
    
    {{#if games}}
        {{#each games}}
        <div class="game">
            <strong>{{titre}}</strong>
            <p>{{description}}</p>
            {{#if genre}}
                <p>Genre: {{genre.titreGenre}}</p>
            {{/if}}
            {{#if editeur}}
                <p>Ã‰diteur: {{editeur.nom}}</p>
            {{/if}}
            <a href="/games/{{id}}/edit">Modifier</a>
            <form action="/games/{{id}}/delete" method="POST" style="display: inline;">
                <button type="submit">Supprimer</button>
            </form>
        </div>
        {{/each}}
    {{else}}
        <p>Aucun jeu disponible.</p>
    {{/if}}
</body>
</html>
